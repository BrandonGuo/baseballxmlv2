<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Surname</th>
      <th>Given name</th>
      <th>Avg</th>
      <th>Hr</th>
      <th>Rbi</th>
      <th>Runs</th>
      <th>Sb</th>
      <th>Ops</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.year %></td>
        <td><%= player.surname %></td>
        <td><%= player.given_name %></td>
        <td><%= player.avg %></td>
        <td><%= player.hr %></td>
        <td><%= player.rbi %></td>
        <td><%= player.runs %></td>
        <td><%= player.sb %></td>
        <td><%= player.ops %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

